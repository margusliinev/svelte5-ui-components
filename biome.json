{
	"$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",
	"files": {
		"ignore": ["node_modules/**/*", ".svelte-kit/**/*", "dist/**/*", "build/**/*"]
	},
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 200,
		"indentWidth": 4,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": { "recommended": true }
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"bracketSpacing": true,
			"trailingComma": "none",
			"semicolons": "asNeeded",
			"quoteStyle": "single",
			"jsxQuoteStyle": "single"
		}
	}
}
